<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/c5"
                android:centerY="0.5"
                android:endColor="@color/c5"
                android:startColor="@color/c5" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/c11"
                    android:centerY="0.5"
                    android:endColor="@color/c11"
                    android:startColor="@color/c11" />
            </shape>
        </clip>
    </item>
</layer-list>