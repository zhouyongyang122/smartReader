<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent60"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:background="@drawable/sr_bg_corner6dp_white_solid">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="恭喜,上传成功!"
            android:textColor="@color/c6"
            android:textSize="@dimen/f1" />

        <TextView
            android:id="@+id/textSee"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/sr_bg_corner360dp_c4_solid"
            android:gravity="center"
            android:text="查看我的作品"
            android:textColor="@color/white"
            android:textSize="@dimen/f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_below="@+id/textSee"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="这么棒的作品,赶紧分享给小伙伴吧!"
                android:textColor="@color/c7"
                android:textSize="@dimen/f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/imgQQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/qq" />

                <ImageView
                    android:id="@+id/imgWechat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/weixin" />

                <ImageView
                    android:id="@+id/imgFriend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/friend" />

                <ImageView
                    android:id="@+id/imgSina"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/sina" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>