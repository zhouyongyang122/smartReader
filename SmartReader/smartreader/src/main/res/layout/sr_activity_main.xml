<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mainLine">

    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/mainLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/mainBottomActionLayout"
        android:background="@color/c1" />

    <LinearLayout
        android:id="@+id/mainBottomActionLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/c1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/homeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/homeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sr_selector_main_home_img" />

            <TextView
                android:id="@+id/homeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeImg"
                android:layout_centerHorizontal="true"
                android:text="首页"
                android:textColor="@color/black"
                android:textSize="@dimen/f4" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/classImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sr_selector_main_class_img" />

            <TextView
                android:id="@+id/className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classImg"
                android:layout_centerHorizontal="true"
                android:text="班级"
                android:textColor="@color/black"
                android:textSize="@dimen/f4" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/meBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/meImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sr_selector_main_me_img" />

            <TextView
                android:id="@+id/meName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meImg"
                android:layout_centerHorizontal="true"
                android:text="我"
                android:textColor="@color/white"
                android:textSize="@dimen/f4" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>