<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="109dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/sr_bg_corner6dp_white_solid">

        <ImageView
            android:id="@+id/imgBg"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/def_bg" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgBg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:layout_toRightOf="@+id/imgBg"
            android:maxLines="1"
            android:text="标题标题"
            android:textColor="@color/c1"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/textSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgBg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="副标题标题"
            android:textColor="@color/c7"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/textTag"
            android:background="@drawable/pass"
            android:gravity="center_horizontal"
            android:paddingTop="3dp"
            android:text="98"
            android:textColor="@color/white"
            android:textSize="@dimen/f4"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textTag"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sr_bg_class_task_tag_1"
            android:gravity="center"
            android:text="配音任务"
            android:textColor="@color/class_task_tag_bg_1"
            android:textSize="@dimen/f4"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textFinishNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgBg"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/imgBg"
            android:text="完成度 11/22"
            android:textColor="@color/c7"
            android:textSize="@dimen/f4"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textFinish"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/imgBg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sr_bg_corner4dp_c11_solid"
            android:gravity="center"
            android:text="去完成"
            android:textColor="@color/white"
            android:textSize="@dimen/f8"
            android:visibility="gone"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@+id/layoutDel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sr_bg_trans50_corner6dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/imgDel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/del"
                android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>