<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="余额:"
                android:textColor="@color/white"
                android:textSize="@dimen/f2" />

            <TextView
                android:id="@+id/textMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="¥180.00"
                android:textColor="@color/white"
                android:textSize="38dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPrice1"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:text="10元"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPrice2"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:text="30元"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPrice3"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:text="50元"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPrice4"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:text="100元"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPrice5"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:text="300元"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPrice6"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:text="500元"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPriceOther"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:text="其它金额"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner4dp_white"
                    android:gravity="center"
                    android:textColor="@color/c6"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="选择提现方式:"
                android:textColor="@color/white"
                android:textSize="@dimen/f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_corner4dp_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/weixin" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="微信提取"
                    android:textColor="@color/c6"
                    android:textSize="@dimen/f2" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/icon_success" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="注意事项:"
                android:textColor="@color/white"
                android:textSize="@dimen/f2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="1.提现申请将在24小时内审批到账;如果遇高峰期,可能延迟到账,请耐心等待;\n2.请及时关注'微信-我的-钱包-零钱-零钱明细',如果有名称为'企业付款:趣点读提现成功'的数据,即提现成功"
                android:textColor="@color/white"
                android:textSize="@dimen/f4" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btnTake"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sr_bg_corner360dp_white_c4"
        android:gravity="center"
        android:text="立即提现"
        android:textColor="@color/c1"
        android:textSize="@dimen/f1" />

    <RelativeLayout
        android:id="@+id/layoutOtherMoney"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent40"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="其它金额"
                android:textColor="@color/c6"
                android:textSize="@dimen/f2" />

            <EditText
                android:id="@+id/editMoney"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/textTip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_corner4dp_white"
                android:hint="输入金额"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textColor="@color/c6"
                android:textSize="@dimen/f2" />

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/editMoney"
                android:layout_marginTop="30dp"
                android:background="@color/c7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/viewLine"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCancle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/c6"
                    android:textSize="@dimen/f2" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/c7" />

                <TextView
                    android:id="@+id/textOk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/c6"
                    android:textSize="@dimen/f2" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>