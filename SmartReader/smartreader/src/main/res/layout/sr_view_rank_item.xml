<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/textRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:textColor="@color/c7"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textRank"
        android:src="@drawable/def_avatar" />

    <ImageView
        android:id="@+id/imgVip"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/imgAvatar"
        android:layout_alignTop="@+id/imgAvatar"
        android:layout_marginRight="-8dp"
        android:layout_marginTop="-8dp"
        android:src="@drawable/icon_gold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imgAvatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周咏炀"
            android:textColor="@color/c6"
            android:textSize="@dimen/f2" />

        <TextView
            android:id="@+id/textLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Unit one"
            android:textColor="@color/c7"
            android:textSize="@dimen/f3" />
    </LinearLayout>

    <TextView
        android:id="@+id/textScore"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/pass"
        android:gravity="center"
        android:text="98"
        android:textColor="@color/white"
        android:textSize="@dimen/f3"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textSuport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgAvatar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/sr_bg_support"
        android:drawablePadding="4dp"
        android:text="0" />
</RelativeLayout>