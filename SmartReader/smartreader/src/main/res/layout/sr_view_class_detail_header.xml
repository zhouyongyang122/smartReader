<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/c5"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textSchoolName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="学校名称: 中心小学"
        android:textColor="@color/c2"
        android:textSize="@dimen/f4" />

    <TextView
        android:id="@+id/textClassName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="班级名称: 中心小学"
        android:textColor="@color/c2"
        android:textSize="@dimen/f4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/copy"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="邀请码: 9999999"
            android:textColor="@color/c2"
            android:textSize="@dimen/f4" />

        <TextView
            android:id="@+id/textUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/people"
            android:drawablePadding="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="查看成员"
            android:textColor="@color/c2"
            android:textSize="@dimen/f4" />
    </RelativeLayout>
</LinearLayout>