<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    android:orientation="vertical"
    android:padding="15dp">


    <EditText
        android:id="@+id/textMsg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sr_bg_corner6dp_white_solid"
        android:gravity="left|top"
        android:hint="请输入反馈内容(最多200字)"
        android:padding="15dp"
        android:textColor="@color/c6"
        android:textSize="@dimen/f3" />

    <RelativeLayout
        android:id="@+id/layoutOk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/sr_bg_corner360dp_white_solid"
        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/sr_bg_corner360dp_c4_solid"
            android:gravity="center"
            android:text="提交反馈"
            android:textColor="@color/c1"
            android:textSize="@dimen/f1" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="添加微信公众号：英语趣点读\n我们想更好的为你服务"
        android:textColor="@color/white"
        android:textSize="@dimen/f2" />
</LinearLayout>